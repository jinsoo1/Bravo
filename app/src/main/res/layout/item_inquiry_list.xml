<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[회원정보]"
                android:textSize="24dp"
                android:fontFamily="@font/font_semibold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/grey_2f2f"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down_line_black"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원정보 관련 문의드립니다."
            android:fontFamily="@font/font_extrabold"
            android:textSize="24dp"
            android:textColor="@color/grey_2f2f"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="접수완료"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/green_37bc"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.10.08 18:26:55"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/grey_b4b4"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_gray_f3f3_radius_16dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테스트 글자 탈퇴는 어떻게 하는건가요?? 어디를 가야하나요 ㅎㅎㅎㅎ"
                android:singleLine="true"
                android:fontFamily="@font/font_medium"
                android:textSize="18dp"
                android:textColor="#595959"
                android:layout_gravity="center"
                android:padding="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_purple_efe9_radius_16dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvAnswerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요, 브라보ㅓ입니다."
                android:fontFamily="@font/font_medium"
                android:textSize="22dp"
                android:textColor="@color/grey_2f2f" />

            <TextView
                android:id="@+id/tvAnswerDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.10.08 20:03:15"
                android:fontFamily="@font/font_medium"
                android:textSize="16dp"
                android:textColor="#878787"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/tvAnswerContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요, 고객님께서 문의주신 회원 탈퇴는 설정 페이지에서 진행하실 수 있습니다. 어플 내 우측 상단 마이페이지 (사람 아이콘) - 맨 하단 - 회원 탈퇴 가능합니다.\n
탈퇴 시 동일 휴대폰으로 30일 이내 재가입이 어려우며, 어플 접속 시 재로그인이 안되는 부분으로 탈퇴 확인이 가능합니다."
                android:fontFamily="@font/font_medium"
                android:textSize="18dp"
                android:textColor="#595959"
                android:paddingTop="15dp"/>



        </LinearLayout>


    </LinearLayout>

</layout>