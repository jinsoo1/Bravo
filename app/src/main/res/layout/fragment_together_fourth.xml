<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.bravo.android.bravo.ui.view.main.community.together.fragment.fourth.TogetherFourthViewModel" />

        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/purple_6e32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow1"
                />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_num1"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toStartOf="@id/iv_num2"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_arrow1"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow2"
                />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_num2"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toStartOf="@id/iv_num3"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_arrow2"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow3"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_num3"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toStartOf="@id/tv_fourth"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="4단계"
                app:layout_constraintStart_toEndOf="@+id/iv_arrow3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow4"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/tv_fourth"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toStartOf="@id/iv_num5"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_arrow4"
                app:layout_constraintTop_toTopOf="@id/tv_fourth"
                app:layout_constraintBottom_toBottomOf="@id/tv_fourth"
                app:layout_constraintEnd_toEndOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/grey_eaea"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_title"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="성별 / 나이"
                    android:textSize="26dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="26dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:text="성별"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="24dp"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_grey_radius_10dp"
                    android:padding="16dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    >

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="무관"
                            android:textSize="24dp"
                            android:checked="@{vm.gender.equals(`무관`) ? true : false}"
                            android:onClick="@{() -> vm.setGenderValue(`무관`)}"
                            android:textColor="@color/grey_5959"
                            />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="여성"
                            android:textSize="24dp"
                            android:checked="@{vm.gender.equals(`여성`) ? true : false}"
                            android:onClick="@{() -> vm.setGenderValue(`여성`)}"
                            android:textColor="@color/grey_5959"
                            />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="남성"
                            android:checked="@{vm.gender.equals(`남성`) ? true : false}"
                            android:onClick="@{() -> vm.setGenderValue(`남성`)}"
                            android:textSize="24dp"
                            android:textColor="@color/grey_5959"
                            />

                    </RadioGroup>


                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:text="나이"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="24dp"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_grey_radius_10dp"
                    android:padding="16dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    >
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="무관"
                            android:textSize="24dp"
                            android:checked="@{vm.ageState == false ? true : false}"
                            android:onClick="@{() -> vm.setAgeState(false)}"
                            android:textColor="@color/grey_5959"

                            />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="직접입력"
                            android:textSize="24dp"
                            android:checked="@{vm.ageState == true ? true : false}"
                            android:onClick="@{() -> vm.setAgeState(true)}"
                            android:textColor="@color/grey_5959"
                            />

                    </RadioGroup>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:visibility="@{vm.ageState == true ? View.VISIBLE : View.GONE}"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_grey_radius_10dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:weightSum="4"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"
                            android:gravity="center|end"
                            android:textSize="18dp"
                            android:text="@={vm.firstAge}"
                            android:textColor="@color/grey_5959"
                            android:inputType="number"
                            android:maxLength="2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="년생"
                            android:textSize="18dp"
                            android:textColor="@color/grey_5959"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="24dp"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="~"
                        android:textColor="@color/black"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_grey_radius_10dp"
                        android:layout_weight="1"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="18dp"
                            android:gravity="center|end"
                            android:text="@={vm.secondAge}"
                            android:textColor="@color/grey_5959"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:maxLength="2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="년생"
                            android:textSize="18dp"
                            android:textColor="@color/grey_5959"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="24dp"
                            android:layout_weight="1"
                            />



                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="다음"
                    android:textSize="22dp"
                    android:onClick="@{() -> vm.setOnNextAction()}"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/bg_purple_radius_8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_6e32"
                    android:text="작성 취소"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bg_white_stroke_purple_10dp_radius"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>