<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.bravo.android.bravo.ui.view.main.community.together.fragment.first.TogetherFirstViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/purple_6e32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="1단계"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/tv_first"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toStartOf="@id/iv_num2"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_arrow1"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow2"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_num2"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toStartOf="@id/iv_num3"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_arrow2"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow3"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_num3"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toStartOf="@id/iv_num4"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_arrow3"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow4"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_num4"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toStartOf="@id/iv_num5"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_num5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic__back__appbar"
                app:layout_constraintStart_toEndOf="@id/iv_arrow4"
                app:layout_constraintTop_toTopOf="@id/tv_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintEnd_toEndOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/grey_eaea"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_title"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_test_icon"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 주제 선택"
                android:textSize="26dp"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/iv_title"
                app:layout_constraintStart_toEndOf="@id/iv_title"
                app:layout_constraintBottom_toBottomOf="@id/iv_title"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btn_next"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/layout_2"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            android:onClick="@{() -> vm.onTogetherBtnClick(1)}"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="8dp"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:background="@{vm.category.equals(`운동`) ? @color/purple_6e32 : @color/white}"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grey_B4B4"
                                    android:textSize="18dp"
                                    android:text="산책, 등산, 골프, 테니스"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@{vm.category.equals(`운동`) ? @color/white : @color/black}"
                                    android:textStyle="bold"
                                    android:textSize="22dp"
                                    android:text="운동"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginTop="11dp"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            android:onClick="@{() -> vm.onTogetherBtnClick(2)}"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginStart="8dp"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:background="@{vm.category.equals(`취미`) ? @color/purple_6e32 : @color/white}"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grey_B4B4"
                                    android:textSize="18dp"
                                    android:text="이걸 하면 즐거워요"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@{vm.category.equals(`취미`) ? @color/white : @color/black}"
                                    android:textStyle="bold"
                                    android:textSize="22dp"
                                    android:text="취미"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginTop="11dp"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_2"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_1"
                        app:layout_constraintBottom_toTopOf="@id/layout_3"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            android:onClick="@{() -> vm.onTogetherBtnClick(3)}"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="8dp"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:background="@{vm.category.equals(`사교`) ? @color/purple_6e32 : @color/white}"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grey_B4B4"
                                    android:textSize="18dp"
                                    android:text="대화할 친구가 필요할 때"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@{vm.category.equals(`사교`) ? @color/white : @color/black}"
                                    android:textStyle="bold"
                                    android:textSize="22dp"
                                    android:text="사교"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginTop="11dp"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_3"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            android:onClick="@{() -> vm.onTogetherBtnClick(4)}"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginStart="8dp"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:background="@{vm.category.equals(`맛집`) ? @color/purple_6e32 : @color/white}"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grey_B4B4"
                                    android:textSize="18dp"
                                    android:text="맛있는 것 함께 먹어요"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@{vm.category.equals(`맛집`) ? @color/white : @color/black}"
                                    android:textStyle="bold"
                                    android:textSize="22dp"
                                    android:text="맛집"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginTop="11dp"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_4"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layout_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            android:onClick="@{() -> vm.onTogetherBtnClick(5)}"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="8dp"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:background="@{vm.category.equals(`반려동물`) ? @color/purple_6e32 : @color/white}"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grey_B4B4"
                                    android:textSize="18dp"
                                    android:text="자식만큼 소중한 반려동물"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@{vm.category.equals(`반려동물`) ? @color/white : @color/black}"
                                    android:textStyle="bold"
                                    android:textSize="22dp"
                                    android:text="반려동물"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginTop="11dp"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_5"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            android:onClick="@{() -> vm.onTogetherBtnClick(6)}"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginStart="8dp"
                            >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@{vm.category.equals(`기타`) ? @color/purple_6e32 : @color/white}"
                                android:padding="16dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="딱 맞는 주제가 없을때"
                                    android:textColor="@color/grey_B4B4"
                                    android:textSize="18dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="11dp"
                                    android:layout_marginBottom="7dp"
                                    android:text="기타"
                                    android:textColor="@{vm.category.equals(`기타`) ? @color/white : @color/black}"
                                    android:textSize="22dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_6" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="다음"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_margin="24dp"
                    android:onClick="@{() -> vm.onTogetherBtnClick(7)}"
                    android:enabled="@{vm.category != null ? true : false}"
                    android:background="@{vm.category != null ? @drawable/bg_purple_radius_8dp : @drawable/bg_grey_radius_8dp}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>



       </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>